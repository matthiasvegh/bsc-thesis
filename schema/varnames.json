{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Schema for variable-name database",
  "required": [
    "Variables"
  ],
  "properties": {
    "Variables": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "name",
          "location",
          "occurences"
        ],
        "properties": {
          "type": {
            "type": "string",
            "examples": [
              "std::function<void (void)>"
            ],
            "pattern": "^(.*)$"
          },
          "name": {
            "type": "string",
            "examples": [
              "f"
            ],
            "pattern": "^(.*)$"
          },
          "location": {
            "type": "string",
            "examples": [
              "/path/to/include/a.hpp:123:45"
            ],
            "pattern": "^(.*):[0-9]+:[0-9]+$"
          },
          "occurences": {
            "type": "array",
            "items": {
              "type": "string",
              "examples": [
                "/path/to/source/a.cpp:12:34"
              ],
              "pattern": "^(.*):[0-9]+:[0-9]+$"
            }
          }
        }
      }
    }
  }
}
